<view class="page-add-todo">

  <view class="add-todo">
    <input 
      class="add-todo-input"
      placeholder="What needs to be done?"
      onBlur="onBlur"
      value="{{inputValue}}"
    />
  </view>

  <view class="todo-footer">
    <button class="commit-button" type="default" size="default"  onTap="add">Commit</button>
  </view>
  
</view>